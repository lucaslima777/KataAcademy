<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:context=".algorithms.RgbToHexFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:id="@+id/edit_r"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:hint="r"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:inputType="number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/edit_g"/>

            <EditText
                    android:id="@+id/edit_g"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:hint="g"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:inputType="number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                    android:id="@+id/edit_b"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:hint="b"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:inputType="number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/edit_g"/>

            <Button
                    android:id="@+id/button_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="verify"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edit_g"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>